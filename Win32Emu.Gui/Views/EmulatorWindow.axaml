<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Win32Emu.Gui.ViewModels"
        xmlns:services="using:Win32Emu.Gui.Services"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="768"
        x:Class="Win32Emu.Gui.Views.EmulatorWindow"
        x:DataType="vm:EmulatorWindowViewModel"
        Title="Win32Emu - Game Running"
        Width="1024"
        Height="768">

    <Design.DataContext>
        <vm:EmulatorWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="*,Auto">
        <!-- Main Content Area -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
            
            <!-- Game Display Area (placeholder for SDL3/GDI32 rendering) -->
            <Border Grid.Column="0"
                    Background="Black"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                    BorderThickness="1">
                <Grid>
                    <TextBlock Text="ðŸŽ® Game Rendering Area"
                             FontSize="24"
                             Foreground="Gray"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"/>
                    <TextBlock Text="(SDL3/DirectDraw output will appear here)"
                             FontSize="14"
                             Foreground="Gray"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             Margin="0,40,0,0"/>
                </Grid>
            </Border>

            <!-- Debug Panel (collapsible) -->
            <Border Grid.Column="1"
                    Width="400"
                    Background="{DynamicResource SystemControlBackgroundAltMediumBrush}"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                    BorderThickness="1,0,0,0"
                    IsVisible="{Binding ShowDebugPanel}">
                <Grid RowDefinitions="Auto,*,Auto,*">
                    
                    <!-- Debug Output Header -->
                    <Border Grid.Row="0"
                            Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                            Padding="10">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0"
                                     Text="Debug Output"
                                     FontWeight="Bold"/>
                            <ComboBox Grid.Column="1"
                                    SelectedItem="{Binding MinimumDebugLevel}"
                                    Width="100">
                                <ComboBoxItem>Trace</ComboBoxItem>
                                <ComboBoxItem>Debug</ComboBoxItem>
                                <ComboBoxItem>Info</ComboBoxItem>
                                <ComboBoxItem>Warning</ComboBoxItem>
                                <ComboBoxItem>Error</ComboBoxItem>
                            </ComboBox>
                        </Grid>
                    </Border>

                    <!-- Debug Messages -->
                    <ScrollViewer Grid.Row="1" Padding="5">
                        <ItemsControl ItemsSource="{Binding DebugMessages}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,2">
                                        <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm:ss}'}"
                                                 FontSize="10"
                                                 Foreground="Gray"
                                                 Width="60"/>
                                        <TextBlock Text="{Binding Level}"
                                                 FontSize="10"
                                                 Width="60"
                                                 FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Message}"
                                                 FontSize="10"
                                                 TextWrapping="Wrap"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Stdout Header -->
                    <Border Grid.Row="2"
                            Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                            Padding="10"
                            IsVisible="{Binding ShowStdOutputPanel}">
                        <TextBlock Text="Standard Output (DOS-like)"
                                 FontWeight="Bold"/>
                    </Border>

                    <!-- Stdout Console -->
                    <Border Grid.Row="3"
                            Background="Black"
                            IsHitTestVisible="True"
                            IsVisible="{Binding ShowStdOutputPanel}">
                        <ScrollViewer Padding="5" >
                                        <TextBlock Text="{Binding StdOutput}"
                                                 FontFamily="Monospace"
                                                 FontSize="12"
                                                 Foreground="LightGray"
                                                 />
                        </ScrollViewer>
                    </Border>

                </Grid>
            </Border>

        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="1"
                Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                BorderThickness="0,1,0,0"
                Padding="10,5">
            <Grid ColumnDefinitions="Auto,Auto,Auto,Auto,*">
                <TextBlock Grid.Column="0"
                         Text="{Binding CurrentState, StringFormat='State: {0}'}"
                         VerticalAlignment="Center"
                         Margin="0,0,20,0"/>
                
                <!-- Stop Button -->
                <Button Grid.Column="1"
                        Command="{Binding StopEmulationCommand}"
                        ToolTip.Tip="Stop Emulation"
                        Margin="0,0,5,0"
                        Padding="10,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="â¹" FontSize="16" Margin="0,0,5,0"/>
                        <TextBlock Text="Stop"/>
                    </StackPanel>
                </Button>
                
                <!-- Pause/Resume Button -->
                <Button Grid.Column="2"
                        Command="{Binding PauseResumeEmulationCommand}"
                        ToolTip.Tip="Pause/Resume Emulation"
                        Margin="0,0,5,0"
                        Padding="10,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="â¸" FontSize="16" Margin="0,0,5,0"/>
                        <TextBlock Text="Pause/Resume"/>
                    </StackPanel>
                </Button>
                
                <!-- Toggle Debug Panel Button -->
                <Button Grid.Column="3"
                        Command="{Binding ToggleDebugPanelCommand}"
                        ToolTip.Tip="Toggle Debug Panel"
                        Margin="0,0,5,0"
                        Padding="10,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ›" FontSize="16" Margin="0,0,5,0"/>
                        <TextBlock Text="Debug Panel"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

    </Grid>

</Window>
