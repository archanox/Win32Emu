<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Win32Emu.Gui.App"
             xmlns:local="using:Win32Emu.Gui"
             xmlns:converters="using:Win32Emu.Gui.Converters"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Resources>
        <converters:BoolToImplementedConverter x:Key="BoolToImplementedConverter"/>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <converters:ThumbnailPathConverter x:Key="ThumbnailPathConverter"/>
    </Application.Resources>

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
</Application>